{
  "compilerOptions": {
      "target": "es2015",
      "lib": [
          "es6",
          "dom"

      ],
      "types": [
          "node"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "./dist",
      "watch": false,
      "declaration": true
  },
  "compileOnSave": false,
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}